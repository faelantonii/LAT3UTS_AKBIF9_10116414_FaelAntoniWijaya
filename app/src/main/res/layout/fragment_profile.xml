<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f3"
    android:orientation="vertical"
    android:layout_marginBottom="50dp">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:background="@color/colorSplash">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/fael"
                    app:civ_border_width="1dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="26dp"
                    app:civ_border_color="#38b5f2"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="170dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Fael Antoni"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:fontFamily="@font/nunito"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.031"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingLeft="14.5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="35.6dp"
                    android:background="@drawable/rectangle">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="225dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="19dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/nunito"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20.3dp"
                            android:gravity="center_horizontal"
                            android:text="About Me"
                            android:textColor="#333232"
                            android:textSize="13.7sp" />


                        <me.biubiubiu.justifytext.library.JustifyTextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:id="@+id/TxtView4"

                            android:textSize="15sp"
                            android:fontFamily="@font/nunito"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:text="Saya haus akan pengetahuan, selalu berusaha untuk melatih dalam keahlian. dapat berdiskusi dengan baik mengenai pekerjaan, dapat bertanggung jawab, dapat mnyelesaikan pekerjaan dengan detail dan sesuai yang dijadwalkan. dan
dapat mengambil keputusan dibawah tekanan"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingLeft="14.5dp">

                <View
                    android:layout_width="5.6dp"
                    android:layout_height="365dp"
                    android:background="#38b5f2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="480dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="35.6dp"
                    android:background="@drawable/rectangle">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="19dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20.3dp"
                            android:fontFamily="@font/nunito"
                            android:gravity="center_horizontal"
                            android:text="Contact Me"
                            android:textColor="#333232"
                            android:textSize="13.7sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/imgEmail"
                                android:layout_width="25.8dp"
                                android:layout_height="25.8dp"
                                android:layout_marginTop="12.3dp"
                                android:background="@drawable/ic_gmail" />

                            <TextView
                                android:id="@+id/txtEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10.3dp"
                                android:layout_marginTop="12.3dp"
                                android:layout_toRightOf="@+id/imgEmail"
                                android:fontFamily="@font/nunito"
                                android:text="faelantonii@gmail.com" />

                            <TextView
                                android:id="@+id/imgInstagram"
                                android:layout_width="25.8dp"
                                android:layout_height="25.8dp"
                                android:layout_below="@id/imgEmail"
                                android:layout_marginTop="12.3dp"
                                android:background="@drawable/ic_instagram" />

                            <TextView
                                android:id="@+id/txtInstagram"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imgEmail"
                                android:layout_marginLeft="10.3dp"
                                android:layout_marginTop="13dp"
                                android:layout_toRightOf="@+id/imgInstagram"
                                android:fontFamily="@font/nunito"
                                android:text="el.antt" />

                            <TextView
                                android:id="@+id/imgFacebook"
                                android:layout_width="25.8dp"
                                android:layout_height="25.8dp"
                                android:layout_below="@id/imgInstagram"
                                android:layout_marginTop="12.3dp"
                                android:background="@drawable/ic_facebook" />

                            <TextView
                                android:id="@+id/txtFacebook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imgInstagram"
                                android:layout_marginLeft="10.3dp"
                                android:layout_marginTop="12.3dp"
                                android:layout_toRightOf="@+id/imgFacebook"
                                android:fontFamily="@font/nunito"
                                android:text="Fael Antoni" />

                        </RelativeLayout>

                        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"

                            android:layout_alignParentStart="true"
                            android:layout_marginTop="10dp"
                            tools:context="com.example.mapwithmarker.MapsMarkerActivity" />

                        

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>